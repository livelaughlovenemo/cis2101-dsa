#include <stdio.h>
#include <stdlib.h>
#include "types.h"
#define MAX 10


int main(){
    List L;
    initialize(&L);
    
    int size, num, choice, data, position;
    while(1){
        
    printf("\nChoose an option:\n1. Insert First\n2. Insert Last\n3. Insert at Index\n4. Display\n5. Delete First\n6. Delete Last\n7. Delete At Index\n8. Exit\nChoice: ");
    scanf("%d", &choice);
    
    switch(choice){
        case 1:
        printf("Enter data to insert: ");
        scanf("%d", &data);
        insertFirst(&L, data);

        break;
        case 2:
        printf("Enter data to insert: ");
        scanf("%d", &data);
        insertLast(&L, data);

        break;
        case 3:
        printf("Enter data to insert: ");
        scanf("%d", &data);
        printf("Insert where: ");
        scanf("%d", &position);
        insertAtIndex(&L, data, position);
        break;

        case 4:
        display(&L, data);
        break;

        case 5:
        removeFirst(&L);
        break;
        
        case 6:
        removeLast(&L);
        
        break;
        
        case 7:
        printf("Delete where: ");
        scanf("%d", &position);
        removeAtIndex(&L, position);
        break;
        
        case 8:
        return 0;
        break;
        
        default:
        printf("WRONG!");
        break;
        
    }
}
}
